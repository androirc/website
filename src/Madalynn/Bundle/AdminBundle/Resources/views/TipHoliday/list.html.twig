{% extends "AdminBundle:Base:list.html.twig" %}

{% block subcontent %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{ 'backend.tip_holiday.field.language'|trans }}</th>
                <th>{{ 'backend.tip_holiday.field.date'|trans }}</th>
                <th>{{ 'backend.tip_holiday.field.content'|trans }}</th>
                <th>{{ 'backend.actions.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pager %}
            <tr>
                <td>{{ entity.language }}</td>
                <td>{{ '%02d/%02d'|format(entity.month, entity.day) }}</td>
                <td><a href="{{ path('admin_tip_holiday_show', {'id': entity.id}) }}">{{ entity.content|truncate(100)|raw }}</a></td>
                <td>
                    <a href="{{ path('admin_tip_holiday_edit', {'id': entity.id}) }}"><img src="{{ asset('bundles/admin/images/pencil-16.png') }}" /></a>
                    <a onclick="return confirm('Are you sure?')" href="{{ path('admin_tip_holiday_delete', {'id': entity.id}) }}"><img src="{{ asset('bundles/admin/images/cross-16.png') }}" /></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
