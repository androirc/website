{% extends "AdminBundle:Base:list.html.twig" %}

{% block subcontent %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{ 'backend.change_log.field.version'|trans }}</th>
                <th>{{ 'backend.actions.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pager %}
            <tr>
                <td><a href="{{ path('admin_change_log_show', {'id' : entity.id}) }}">{{ entity.version }}</a></td>
                <td>
                    <a href="{{ path('admin_change_log_edit', {'id': entity.id}) }}"><img src="{{ asset('bundles/admin/images/pencil-16.png') }}" /></a>
                    <a onclick="return confirm('Are you sure?')" href="{{ path('admin_change_log_delete', {'id': entity.id}) }}"><img src="{{ asset('bundles/admin/images/cross-16.png') }}" /></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
