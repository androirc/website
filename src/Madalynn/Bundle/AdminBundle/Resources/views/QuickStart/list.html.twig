{% extends "AdminBundle:Base:list.html.twig" %}

{% block subcontent %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{ 'backend.quick_start.field.language'|trans }}</th>
                <th>{{ 'backend.quick_start.field.version_min'|trans }}</th>
                <th>{{ 'backend.quick_start.field.version_max'|trans }}</th>
                <th>{{ 'backend.actions.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pager %}
            <tr>
                <td>{{ entity.language }}</td>
                <td>{{ entity.versionMin }}</td>
                <td>{{ entity.versionMax|default('backend.quick_start.field.version_none'|trans) }}</td>
                <td>
                    <a href="{{ path('admin_quick_start_show', {'id': entity.id}) }}"><img src="{{ asset('bundles/admin/images/badge-circle-direction-right-16.png') }}" /></a>
                    <a href="{{ path('admin_quick_start_edit', {'id': entity.id}) }}"><img src="{{ asset('bundles/admin/images/pencil-16.png') }}" /></a>
                    <a onclick="return confirm('Are you sure?')" href="{{ path('admin_quick_start_delete', { 'id': entity.id }) }}"><img src="{{ asset('bundles/admin/images/cross-16.png') }}" /></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
