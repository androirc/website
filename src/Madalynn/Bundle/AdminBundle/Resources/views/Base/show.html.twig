{% extends "AdminBundle::backend.html.twig" %}

{% block title %}{{ ('backend.' ~ entity_name ~ '.show_title')|trans }}{% endblock %}

{% block page %}
    <h1>{{ block('title') }}</h1>

    {% block subcontent %}{% endblock %}

    <div class="form-actions">
        {% block entity_actions %}
            <a class="btn btn-danger" onclick="return confirm('Are you sure?')" href="{{ path('admin_' ~ entity_name ~ '_delete', {'id': entity.id}) }}">{{ 'backend.actions.delete'|trans }}</a>
            <a class="btn" href="{{ path('admin_' ~ entity_name ~ '_list') }}">{{ 'backend.actions.back_list'|trans }}</a>
        {% endblock %}
    </div>
{% endblock %}
