{% extends 'AdminBundle::backend.html.twig' %}

{% block title %}{{ 'backend.login.title'|trans }}{% endblock %}

{% block content %}
    {% if error %}
        <div class="alert alert-error">
            {{ error.message|trans }}
        </div>
    {% endif %}

    <h1>{{ 'backend.login.title'|trans }}</h1>

    <form class="form-horizontal" action="{{ path('_login_check') }}" method="post">
        <div class="control-group">
            <label class="required control-label" for="username">{{ 'backend.login.username'|trans }}</label>

            <div class="controls">
                <input type="text" required="required" id="username" name="_username" value="{{ last_username }}" />
            </div>
        </div>
        <div class="control-group">
            <label class="required control-label" for="password">{{ 'backend.login.password'|trans }}</label>

            <div class="controls">
                <input type="password" required="required" id="password" name="_password" />
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <label for="remember_me" class="checkbox">
                    <input type="checkbox" id="remember_me" name="_remember_me" />
                    {{ 'backend.login.remember_me'|trans }}
                </label>
            </div>
        </div>

        <div class="form-actions">
            <button id="_submit" name="_submit" type="submit" class="btn btn-primary">{{ 'backend.login.submit'|trans }}</button>
            <button type="button" class="btn">Cancel</button>
        </div>
    </form>
{% endblock %}
