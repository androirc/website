{% extends "AdminBundle:Base:list.html.twig" %}
{% import "AdminBundle::macro.html.twig" as macro %}

{% block subcontent %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{ 'backend.article.field.title'|trans }}</th>
                <th>{{ 'backend.article.field.visible'|trans }}</th>
                <th>{{ 'backend.article.field.author'|trans }}</th>
                <th>{{ 'backend.article.field.created'|trans }}</th>
                <th>{{ 'backend.actions.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in pager %}
            <tr>
                <td><a href="{{ path('admin_article_show', {'id' : entity.id}) }}">{{ entity.title }}</a></td>
                <td>{{ macro.display_bool(entity.visible) }}</td>
                <td>{{ entity.author }}</td>
                <td>{{ entity.created|date('m/d/Y') }}</td>
                <td>
                    <a href="{{ path('admin_article_edit', {'id': entity.id}) }}"><img src="{{ asset('bundles/admin/images/pencil-16.png') }}" /></a>
                    <a onclick="return confirm('Are you sure?')" href="{{ path('admin_article_delete', {'id': entity.id}) }}"><img src="{{ asset('bundles/admin/images/cross-16.png') }}" /></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
