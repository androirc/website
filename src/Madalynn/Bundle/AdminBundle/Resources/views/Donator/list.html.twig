{% extends "AdminBundle:Base:list.html.twig" %}

{% block subcontent %}
  <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{ 'backend.donator.field.name'|trans }}</th>
                <th>{{ 'backend.donator.field.amount'|trans }}</th>
                <th>{{ 'backend.actions.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pager %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>${{ entity.amount }}</td>
                <td>
                    <a href="{{ path('admin_donator_edit', {'id': entity.id}) }}"><img src="{{ asset('bundles/admin/images/page-pencil-16.png') }}" /></a>
                    <a onclick="return confirm('Are you sure?')" href="{{ path('admin_donator_delete', {'id': entity.id}) }}"><img src="{{ asset('bundles/admin/images/cross-16.png') }}" /></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
