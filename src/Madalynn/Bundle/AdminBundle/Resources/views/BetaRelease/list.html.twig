{% extends "AdminBundle:Base:list.html.twig" %}

{% block subcontent %}
  <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{ 'backend.beta_release.field.version'|trans }}</th>
                <th>{{ 'backend.beta_release.field.downloadable'|trans }}</th>
                <th>{{ 'backend.beta_release.field.downloads'|trans }}</th>
                <th>{{ 'backend.actions.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pager %}
            <tr>
                <td><a href="{{ path('admin_beta_release_show', { 'id': entity.id }) }}">{{ entity.version }}</a></td>
                <td>{{ macro.display_bool(entity.downloadable) }}</td>
                <td>{{ entity.downloads|length }}</td>
                <td>
                    <a href="{{ path('admin_beta_release_show', {'id': entity.id}) }}"><img src="{{ asset('bundles/admin/images/badge-circle-direction-right-16.png') }}" /></a>
                    <a href="{{ path('admin_beta_release_edit', {'id': entity.id}) }}"><img src="{{ asset('bundles/admin/images/pencil-16.png') }}" /></a>
                    <a onclick="return confirm('Are you sure?')" href="{{ path('admin_beta_release_delete', { 'id': entity.id }) }}"><img src="{{ asset('bundles/admin/images/cross-16.png') }}" /></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
