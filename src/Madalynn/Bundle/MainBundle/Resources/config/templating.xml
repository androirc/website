<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="androirc.twig.extension.class">Madalynn\Bundle\MainBundle\Twig\Extension\MainExtension</parameter>
    </parameters>

    <services>
        <service id="twig.extension.text" class="Twig_Extensions_Extension_Text" public="false">
            <tag name="twig.extension" />
        </service>

        <service id="androirc.twig.extension" class="%androirc.twig.extension.class%" public="false">
            <argument type="service" id="service_container" />
            <tag name="twig.extension" />
        </service>
    </services>
</container>
