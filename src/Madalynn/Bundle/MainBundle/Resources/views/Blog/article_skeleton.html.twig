<article>
    <div class="article-header">
        <h1><a href="{{ article_url(article) }}">{{ article.title }}</a></h1>
        <div class="subtitle">
            {{
                'frontend.blog.article_subtitle'|trans({
                    '%author%': article.author,
                    '%date%': article.created|date('frontend.blog.date_format'|trans)
                })
            }} -
            <a href="{{ article_url(article) }}#disqus_thread" data-disqus-identifier="{{ article.id }}">0 comment</a>
        </div>
    </div>
    <div class="article-content">
        {{ article.content|raw }}
    </div>
</article>
